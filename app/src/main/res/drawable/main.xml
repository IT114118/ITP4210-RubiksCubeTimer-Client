<vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="370dp"
    android:height="650dp"
    android:viewportWidth="360"
    android:viewportHeight="640"
    >

    <group>

        <clip-path
            android:pathData="M0 0H360V640H0V0Z"
            />

        <path
            android:pathData="M0 0V640H360V0"
            android:fillColor="#EAF0FF"
            />

        <group
            android:translateX="1"
            android:translateY="0"
            android:pivotX="180"
            android:pivotY="320"
            android:scaleX="2"
            android:scaleY="2"
            android:rotation="90"
            >

            <path
                android:pathData="M0 0V640H360V0"
                >

                <aapt:attr name="android:fillColor">

                    <gradient
                        android:type="linear"
                        android:startX="90"
                        android:startY="320"
                        android:endX="270"
                        android:endY="320"
                        >

                        <item
                            android:color="#ECF2FF"
                            android:offset="0"
                            />

                        <item
                            android:color="#00FFFFFF"
                            android:offset="1"
                            />

                    </gradient>

                </aapt:attr>

            </path>

        </group>

        <path
            android:pathData="M0 0H360V640H0V0Z"
            android:strokeWidth="2"
            android:strokeColor="#BBBBBB"
            />

    </group>

</vector>
